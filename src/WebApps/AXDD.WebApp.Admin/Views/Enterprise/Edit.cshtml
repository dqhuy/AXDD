@model AXDD.WebApp.Admin.Models.ViewModels.EnterpriseFormViewModel
@{
    ViewData["Title"] = "Edit Enterprise";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Enterprise" asp-action="Index">Enterprises</a></li>
    <li class="breadcrumb-item active">Edit</li>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit mr-2"></i>
                    Edit Enterprise
                </h3>
            </div>
            
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter enterprise name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TaxCode" class="control-label"></label>
                                <input asp-for="TaxCode" class="form-control" placeholder="Enter tax code" />
                                <span asp-validation-for="TaxCode" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LegalRepresentative" class="control-label"></label>
                                <input asp-for="LegalRepresentative" class="form-control" placeholder="Enter legal representative name" />
                                <span asp-validation-for="LegalRepresentative" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter address"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Website" class="control-label"></label>
                                <input asp-for="Website" class="form-control" placeholder="Enter website URL" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="IndustrialZone" class="control-label"></label>
                                <input asp-for="IndustrialZone" class="form-control" placeholder="Enter industrial zone" />
                                <span asp-validation-for="IndustrialZone" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EnterpriseType" class="control-label"></label>
                                <select asp-for="EnterpriseType" class="form-control">
                                    <option value="">-- Select Type --</option>
                                    <option value="Manufacturing">Manufacturing</option>
                                    <option value="Service">Service</option>
                                    <option value="Trading">Trading</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="EnterpriseType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                    <option value="Suspended">Suspended</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Update Enterprise
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
