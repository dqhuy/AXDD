@model AXDD.WebApp.Admin.Models.ViewModels.DocumentProfileDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết Hồ sơ";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-action="Index">Hồ sơ Tài liệu</a></li>
    @foreach (var crumb in Model.Breadcrumbs)
    {
        <li class="breadcrumb-item">
            <a asp-action="Details" asp-route-id="@crumb.ProfileId">@crumb.Name</a>
        </li>
    }
}

<div class="row">
    <div class="col-md-3">
        <!-- Profile Info Card -->
        <div class="card">
            <div class="card-body box-profile">
                <div class="text-center">
                    <i class="fas fa-folder fa-5x text-primary mb-3"></i>
                </div>
                <h3 class="profile-username text-center">@Model.ProfileName</h3>
                <p class="text-muted text-center">@Model.ProfileCode</p>

                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                        <b>Loại hồ sơ</b>
                        <span class="float-right badge badge-secondary">@Model.ProfileType</span>
                    </li>
                    <li class="list-group-item">
                        <b>Trạng thái</b>
                        <span class="float-right badge badge-@(Model.Status == "Open" ? "success" : Model.Status == "Closed" ? "secondary" : "dark")">
                            @Model.Status
                        </span>
                    </li>
                    <li class="list-group-item">
                        <b>Tài liệu</b>
                        <span class="float-right">@Model.Documents.Count</span>
                    </li>
                    <li class="list-group-item">
                        <b>Hồ sơ con</b>
                        <span class="float-right">@Model.ChildProfiles.Count</span>
                    </li>
                    @if (Model.IsTemplate)
                    {
                        <li class="list-group-item">
                            <span class="badge badge-info w-100">
                                <i class="fas fa-star"></i> Mẫu hồ sơ
                            </span>
                        </li>
                    }
                </ul>

                <div class="btn-group btn-block mb-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="MetadataFields" asp-route-profileId="@Model.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-cog"></i> Metadata
                    </a>
                </div>

                @if (Model.Status == "Open")
                {
                    <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="mb-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-secondary btn-block btn-sm">
                            <i class="fas fa-lock"></i> Đóng hồ sơ
                        </button>
                    </form>
                }
                else if (Model.Status == "Closed")
                {
                    <form asp-action="Open" asp-route-id="@Model.Id" method="post" class="mb-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-block btn-sm">
                            <i class="fas fa-unlock"></i> Mở lại hồ sơ
                        </button>
                    </form>
                    <form asp-action="Archive" asp-route-id="@Model.Id" method="post" class="mb-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-dark btn-block btn-sm">
                            <i class="fas fa-archive"></i> Lưu trữ
                        </button>
                    </form>
                }

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa hồ sơ này?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-block btn-sm">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>

        <!-- Profile Details Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin chi tiết</h3>
            </div>
            <div class="card-body">
                <strong><i class="fas fa-building mr-1"></i> Doanh nghiệp</strong>
                <p class="text-muted">@Model.EnterpriseCode</p>
                <hr>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <strong><i class="fas fa-file-alt mr-1"></i> Mô tả</strong>
                    <p class="text-muted">@Model.Description</p>
                    <hr>
                }

                <strong><i class="far fa-calendar-plus mr-1"></i> Ngày tạo</strong>
                <p class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                <hr>

                @if (Model.UpdatedAt.HasValue)
                {
                    <strong><i class="far fa-calendar-check mr-1"></i> Cập nhật lần cuối</strong>
                    <p class="text-muted">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    <hr>
                }

                @if (Model.OpenedAt.HasValue)
                {
                    <strong><i class="fas fa-unlock mr-1"></i> Ngày mở</strong>
                    <p class="text-muted">@Model.OpenedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    <hr>
                }

                @if (Model.ClosedAt.HasValue)
                {
                    <strong><i class="fas fa-lock mr-1"></i> Ngày đóng</strong>
                    <p class="text-muted">@Model.ClosedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    <hr>
                }
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <!-- Child Profiles -->
        @if (Model.ChildProfiles.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-folder mr-2"></i>
                        Hồ sơ con (@Model.ChildProfiles.Count)
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" asp-route-parentProfileId="@Model.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Thêm hồ sơ con
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var child in Model.ChildProfiles)
                        {
                            <div class="col-lg-4 col-md-6 mb-3">
                                @await Html.PartialAsync("_ProfileCard", child)
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center text-muted py-4">
                    <i class="fas fa-folder-open fa-3x mb-2"></i>
                    <p>Chưa có hồ sơ con</p>
                    <a asp-action="Create" asp-route-parentProfileId="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Thêm hồ sơ con
                    </a>
                </div>
            </div>
        }

        <!-- Documents -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-file mr-2"></i>
                    Tài liệu (@Model.Documents.Count)
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Thêm tài liệu
                    </button>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Documents.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px"></th>
                                    <th>Tên tài liệu</th>
                                    <th>Kích thước</th>
                                    <th>Ngày hết hạn</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 100px">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in Model.Documents.OrderBy(d => d.DisplayOrder))
                                {
                                    <tr class="@(doc.IsExpired ? "table-danger" : doc.IsExpiring ? "table-warning" : "")">
                                        <td class="text-center">
                                            <i class="@doc.Icon fa-2x"></i>
                                        </td>
                                        <td>
                                            <strong>@doc.DocumentName</strong>
                                            @if (!string.IsNullOrEmpty(doc.Description))
                                            {
                                                <br />
                                                <small class="text-muted">@doc.Description</small>
                                            }
                                        </td>
                                        <td>@doc.FileSizeFormatted</td>
                                        <td>
                                            @if (doc.ExpiryDate.HasValue)
                                            {
                                                @doc.ExpiryDate.Value.ToString("dd/MM/yyyy")
                                                @if (doc.IsExpired)
                                                {
                                                    <br /><span class="badge badge-danger">Hết hạn</span>
                                                }
                                                else if (doc.IsExpiring)
                                                {
                                                    <br /><span class="badge badge-warning">Sắp hết hạn</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">--</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @doc.StatusBadgeClass">@doc.Status</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button type="button" class="btn btn-info" title="Tải xuống">
                                                    <i class="fas fa-download"></i>
                                                </button>
                                                <button type="button" class="btn btn-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-file fa-3x mb-2"></i>
                        <p>Chưa có tài liệu nào</p>
                    </div>
                }
            </div>
        </div>

        <!-- Metadata Fields Info -->
        @if (Model.MetadataFields.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-tags mr-2"></i>
                        Trường Metadata (@Model.MetadataFields.Count)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var field in Model.MetadataFields.OrderBy(f => f.DisplayOrder))
                        {
                            <div class="col-md-6 mb-2">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info">
                                        <i class="@field.FieldTypeIcon"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">
                                            @field.FieldLabel
                                            @if (field.IsRequired)
                                            {
                                                <span class="text-danger">*</span>
                                            }
                                        </span>
                                        <span class="info-box-number">@field.FieldType</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
