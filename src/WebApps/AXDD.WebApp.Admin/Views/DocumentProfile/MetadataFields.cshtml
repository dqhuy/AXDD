@model List<AXDD.WebApp.Admin.Models.ViewModels.ProfileMetadataFieldViewModel>
@{
    ViewData["Title"] = "Quản lý Trường Metadata";
    var profile = ViewBag.Profile as AXDD.WebApp.Admin.Models.ApiModels.DocumentProfileDto;
    var profileId = profile?.Id ?? Guid.Empty;
    var profileName = profile?.ProfileName ?? "N/A";
    var profileCode = profile?.ProfileCode ?? "N/A";
    var profileType = profile?.ProfileType ?? "N/A";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-action="Index">Hồ sơ Tài liệu</a></li>
    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@profileId">@profileName</a></li>
    <li class="breadcrumb-item active">Trường Metadata</li>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tags mr-2"></i>
                    Quản lý Trường Metadata
                </h3>
                <div class="card-tools">
                    <a asp-action="CreateField" asp-route-profileId="@profileId" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Thêm Trường mới
                    </a>
                </div>
            </div>

            <div class="card-body">
                <!-- Profile Info -->
                <div class="alert alert-info">
                    <h5><i class="icon fas fa-info-circle"></i> Hồ sơ: @profileName</h5>
                    <p class="mb-0">
                        <strong>Mã:</strong> @profileCode | 
                        <strong>Loại:</strong> @profileType
                    </p>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px">#</th>
                                    <th>Tên trường</th>
                                    <th>Nhãn hiển thị</th>
                                    <th>Loại</th>
                                    <th style="width: 100px">Bắt buộc</th>
                                    <th style="width: 100px">Thứ tự</th>
                                    <th style="width: 150px">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var field in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <i class="@field.FieldTypeIcon fa-lg text-info"></i>
                                        </td>
                                        <td>
                                            <code>@field.FieldName</code>
                                        </td>
                                        <td>
                                            <strong>@field.FieldLabel</strong>
                                            @if (!string.IsNullOrEmpty(field.DefaultValue))
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    Giá trị mặc định: @field.DefaultValue
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge badge-secondary">@field.FieldType</span>
                                        </td>
                                        <td class="text-center">
                                            @if (field.IsRequired)
                                            {
                                                <span class="badge badge-danger">
                                                    <i class="fas fa-check"></i> Bắt buộc
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-light">Tùy chọn</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge badge-info">@field.DisplayOrder</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="EditField" 
                                                   asp-route-id="@field.Id" 
                                                   class="btn btn-warning"
                                                   title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" 
                                                        class="btn btn-danger" 
                                                        onclick="confirmDeleteField('@field.Id', '@field.FieldLabel', '@profileId')"
                                                        title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Các trường metadata này sẽ được sử dụng để thu thập thông tin bổ sung cho tài liệu trong hồ sơ.
                        </small>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-tags fa-4x mb-3"></i>
                        <h5>Chưa có trường metadata nào</h5>
                        <p>Nhấn "Thêm Trường mới" để thêm trường metadata đầu tiên.</p>
                        <a asp-action="CreateField" asp-route-profileId="@profileId" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm Trường mới
                        </a>
                    </div>
                }
            </div>

            <div class="card-footer">
                <a asp-action="Details" asp-route-id="@profileId" class="btn btn-default">
                    <i class="fas fa-arrow-left"></i> Quay lại Chi tiết Hồ sơ
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteFieldModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Xác nhận Xóa Trường
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa trường <strong id="fieldName"></strong>?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <form id="deleteFieldForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDeleteField(fieldId, fieldName, profileId) {
            $('#fieldName').text(fieldName);
            $('#deleteFieldForm').attr('action', '/DocumentProfile/DeleteField/' + fieldId + '?profileId=' + profileId);
            $('#deleteFieldModal').modal('show');
        }
    </script>
}
