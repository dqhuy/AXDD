@model AXDD.WebApp.Admin.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-page">
    <h2 class="headline text-danger">@(Model.StatusCode > 0 ? Model.StatusCode.ToString() : "500")</h2>

    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Something went wrong.</h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p>@Model.ErrorMessage</p>
        }
        else
        {
            <p>
                We will work on fixing that right away. Meanwhile, you may
                <a asp-controller="Home" asp-action="Index">return to dashboard</a> or try using the search form.
            </p>
        }

        @if (Model.ShowRequestId)
        {
            <p class="mt-3">
                <small class="text-muted">Request ID: <code>@Model.RequestId</code></small>
            </p>
        }
    </div>
</div>
