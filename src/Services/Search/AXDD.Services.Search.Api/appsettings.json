{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Elastic.Clients.Elasticsearch": "Information"
    }
  },
  "AllowedHosts": "*",
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "Username": "",
    "Password": "",
    "DefaultIndex": "axdd",
    "Indexes": {
      "Enterprises": "enterprises_idx",
      "Documents": "documents_idx",
      "Projects": "projects_idx"
    },
    "MaxRetries": 3,
    "RequestTimeout": 30,
    "ValidateCertificate": true
  },
  "Search": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "HighlightFragmentSize": 150,
    "FuzzyEnabled": true,
    "FuzzyMaxEditDistance": 2,
    "SuggestionCount": 10,
    "MinTermLengthForFuzzy": 3
  },
  "Jwt": {
    "Secret": "your-secret-key-min-32-chars-long-change-this-in-production",
    "Issuer": "AXDD.Services.Search.Api",
    "Audience": "AXDD.Clients",
    "ExpirationInMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:4200"]
  }
}
