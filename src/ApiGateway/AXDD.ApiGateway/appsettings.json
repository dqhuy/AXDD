{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "masterdata-route": {
        "ClusterId": "masterdata-cluster",
        "Match": {
          "Path": "/api/masterdata/{**catch-all}"
        }
      },
      "enterprise-route": {
        "ClusterId": "enterprise-cluster",
        "Match": {
          "Path": "/api/enterprise/{**catch-all}"
        }
      },
      "investment-route": {
        "ClusterId": "investment-cluster",
        "Match": {
          "Path": "/api/investment/{**catch-all}"
        }
      },
      "filemanager-route": {
        "ClusterId": "filemanager-cluster",
        "Match": {
          "Path": "/api/filemanager/{**catch-all}"
        }
      },
      "report-route": {
        "ClusterId": "report-cluster",
        "Match": {
          "Path": "/api/report/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-api:8080"
          }
        }
      },
      "masterdata-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://masterdata-api:8081"
          }
        }
      },
      "enterprise-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://enterprise-api:8082"
          }
        }
      },
      "investment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://investment-api:8083"
          }
        }
      },
      "filemanager-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://filemanager-api:8084"
          }
        }
      },
      "report-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://report-api:8085"
          }
        }
      }
    }
  }
}
