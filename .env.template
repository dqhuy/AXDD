# AXDD System - Environment Variables Template
# Copy this file to .env and update the values as needed

# ============================================================================
# Infrastructure Configuration
# ============================================================================

# SQL Server Configuration
SQLSERVER_SA_PASSWORD=YourStrong@Passw0rd
SQLSERVER_PORT=1433

# PostgreSQL + PostGIS Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gisdb
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ============================================================================
# Application Configuration
# ============================================================================

# API Gateway
API_GATEWAY_PORT=5000

# Microservices Ports
AUTH_API_PORT=5001
MASTERDATA_API_PORT=5002
ENTERPRISE_API_PORT=5003
INVESTMENT_API_PORT=5004
FILEMANAGER_API_PORT=5005
REPORT_API_PORT=5006
NOTIFICATION_API_PORT=5007
LOGGING_API_PORT=5008
SEARCH_API_PORT=5009
GIS_API_PORT=5010

# Web Applications Ports
ADMIN_WEBAPP_PORT=8080
ENTERPRISE_PORTAL_PORT=4200

# ============================================================================
# Connection Strings (Auto-generated from above, don't edit directly)
# ============================================================================

# SQL Server Connection
SQLSERVER_CONNECTION=Server=sqlserver;Database={DATABASE};User Id=sa;Password=${SQLSERVER_SA_PASSWORD};TrustServerCertificate=True;

# PostgreSQL Connection
POSTGRES_CONNECTION=Host=postgres-gis;Port=${POSTGRES_PORT};Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};

# Redis Connection
REDIS_CONNECTION=redis:${REDIS_PORT}

# ============================================================================
# Additional Configuration
# ============================================================================

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development

# Logging Level
LOGGING_LOGLEVEL_DEFAULT=Information

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:4200

# JWT Settings (for production, use strong secret keys)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ISSUER=https://axdd.dongnai.gov.vn
JWT_AUDIENCE=axdd-api

# File Upload Settings
MAX_FILE_SIZE=104857600
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# ============================================================================
# Production Settings (Uncomment for production)
# ============================================================================

# ASPNETCORE_ENVIRONMENT=Production
# ASPNETCORE_URLS=https://+:443;http://+:80

# SSL Certificate Paths
# SSL_CERTIFICATE_PATH=/etc/ssl/certs/axdd-cert.pfx
# SSL_CERTIFICATE_PASSWORD=YourCertificatePassword

# Database Backup Path
# BACKUP_PATH=/var/backups/axdd

# ============================================================================
# Development Settings
# ============================================================================

# Enable detailed error pages
ASPNETCORE_DETAILEDERRORS=true

# Enable developer exception page
DEVELOPER_EXCEPTION_PAGE=true
